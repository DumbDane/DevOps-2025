<h2>Sign Up</h2>
<% if @error %>
    <div class="error">
        <strong>
            Error:
        </strong>
            <% @error %>
    </div>
<% end %>
<form action="" method=post>
    <dl>
        <dt>Username:</dt>
        <%# TODO: I don't believe these input fifelds work properly %>
        <dd><input type="text" name="username" size=30 value=<% @username %>></dd>
        <dt>E-Mail:</dt>
        <dd><input type="text" name="email" size=30 value=<% @email %>>
        <dt>Password:</dt>
        <dd><input type="password" name="password" size=30>
        <dt>Password <small>(repeat)</small>:
        <dd><input type="password" name="password2" size=30>
    </dl>
    <div class="actions"><input type="submit" value="Sign Up"></div>
</form>
    